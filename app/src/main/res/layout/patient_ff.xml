<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7">

    <ImageView
        android:id="@+id/ffLogout"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:padding="2dp"
        android:src="@drawable/logout" />


    <ImageView
        android:id="@+id/ffHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:src="@drawable/help_selector" />


    <TextView
        android:id="@+id/statusSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="สถานะของรถพยาบาล"
        android:textColor="@color/issue"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/amStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:text="กำลังเดินทาง"
        android:textColor="@color/text"
        android:textSize="16sp" />

